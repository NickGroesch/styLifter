{
  "name": "Stylifter",
  "description": "get the colors and fonts",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "unlimitedStorage",
    "tts"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "styLifter",
    "default_icon": {
      "16": "/images/footballhead16.png",
      "32": "/images/footballhead32.png",
      "48": "/images/footballhead48.png",
      "128": "/images/footballhead128.png"
    }
  },
  "icons": {
    "16": "/images/footballhead16.png",
    "32": "/images/footballhead32.png",
    "48": "/images/footballhead48.png",
    "128": "/images/footballhead128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "records.html"
      ],
      "matches": []
    }
  ]
}